<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity">

    <TextView
        android:id="@+id/homeUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Shivansh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/homeUserName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/homeCylinderText"
        android:text="You have a custody of 10 Cylinders"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:layout_width="200dp"
        android:id="@+id/editTextSearch"
        android:layout_marginTop="30dp"
        android:hint="Search Cylinder"
        app:layout_constraintTop_toBottomOf="@id/homeUserName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">
    </EditText>

    <LinearLayout
        android:id="@+id/filtersLL"
        android:layout_margin="10px"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/editTextSearch"
        android:layout_height="wrap_content">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radioId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Sort by Id" />
            <RadioButton android:id="@+id/radioDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Sort by Date" />
        </RadioGroup>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/homeCylinderRV"
        app:layout_constraintTop_toBottomOf="@id/filtersLL"
        android:layout_marginBottom="80dp"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/homeProgressBar"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:id="@+id/homeScanQRBtn"
        android:layout_margin="10dp"
        app:cornerRadius="20dp"
        android:layout_height="60dp"
        android:text="Scan QR"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>